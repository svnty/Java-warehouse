<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" styleClass="background" prefWidth="600.0" spacing="20"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Cart.AddToCartController">
  <ImageView fx:id="imageView" fitHeight="150" fitWidth="600" />
  <Separator />
  <Label fx:id="introLbl" styleClass="heading" />
  <Separator />

  <HBox alignment="CENTER" spacing="20">
    <Label text="Quantity:" styleClass="label" />
    <TextField fx:id="quantityField" prefWidth="50" />
  </HBox>

  <HBox alignment="CENTER">
    <Button fx:id="addBtn" onAction="#add" text="Add" styleClass="button" prefWidth="150" />
  </HBox>


  <stylesheets>
    <URL value="@../style.css" />
  </stylesheets>
</VBox>